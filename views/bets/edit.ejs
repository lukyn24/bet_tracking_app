<%- include('../partials/header')%>

<title>Sportovní sázení</title>

<%- include('../partials/navbar')%>

<h2><%= bet.game %> - editace </h2>

<form action="/bets/<%=bet.compId%>/?_method=PUT" method="POST">
    <p>
        <label for="day">Day: </label>
        <select name="day" id="day">
            <% for (let i = 1; i < 32; i++) { %>
                <option value="<%=i%>" <%=bet.day == i ? 'selected' : ''%>><%=i%></option>
            <% } %> 
        </select>
        <label for="month">Month: </label>
        <select name="month" id="month">
            <% for (let i = 1; i < 13; i++) { %>
                <option value="<%=i%>" <%=bet.month == i ? 'selected' : ''%>><%=i%></option>
            <% } %> 
        </select>
        <label for="year">Year: </label>
        <select name="year" id="year">
            <% for (let i = 2021; i < 2023; i++) { %>
                <option value="<%=i%>" <%=bet.year == i ? 'selected' : ''%>><%=i%></option>
            <% } %> 
        </select>
    </p>
    <p>
        <label for="sport">Sport: </label>
        <select name="sport" id="sport">
            <option value="fotbal" <%=bet.sport == 'fotbal' ? 'selected' : ''%>>Football</option>
            <option value="hokej" <%=bet.sport == 'hokej' ? 'selected' : ''%>>Ice Hockey</option>
            <option value="basket" <%=bet.sport == 'basket' ? 'selected' : ''%>>Basketball</option>
            <option value="ostatni" <%=bet.sport == 'ostatni' ? 'selected' : ''%>>Other</option>
        </select>
    </p>
    <p>
        <label for="game">Game: </label>
        <input type="text" name="game" id="game" value='<%=bet.game%>'>
    </p>
    <p>
        <label for="pick">Pick: </label>
        <input type="text" name="pick" id="pick" value='<%=bet.pick%>'>
    </p>
    <p>
        <label for="odds">Odds: </label>
        <input type="number" name="odds" id="odds" step="any" value='<%=bet.odds%>'>
    </p>
    <p>
        <label for="stake">Day: </label>
        <select name="stake" id="stake">
            <% for (let i = 1; i < 11; i++) { %>
                <option value="<%=i%>" <%=bet.stake == i ? 'selected' : ''%>><%=i%></option>
            <% } %> 
        </select>
    </p>
    <p>
        <label for="result">Result: </label>
        <select name="result" id="result">
            <option value="non" <%=bet.result == 'non' ? 'selected' : ''%>>NON</option>
            <option value="ok" <%=bet.result == 'ok' ? 'selected' : ''%>>OK</option>
            <option value="half_ok" <%=bet.result == '"half_ok' ? 'selected' : ''%>>1/2 OK</option>
            <option value="void" <%=bet.result == 'void' ? 'selected' : ''%>>VOID</option>
            <option value="half_ko" <%=bet.result == 'half_ko' ? 'selected' : ''%>>1/2 KO</option>
            <option value="ko" <%=bet.result == 'ko' ? 'selected' : ''%>>KO</option>
        </select>
    </p>
    <button>Uložit</button>
</form>

<form action="/bets/<%=bet.compId%>?_method=DELETE" method="POST">
    <button>Delete</button>
</form>

<%- include('../partials/footer')%>